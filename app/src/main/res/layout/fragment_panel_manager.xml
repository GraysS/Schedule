<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.PanelManagerFragment">

        <data>
                <import type="java.util.List" />
                <import type="info.schedule.domain.Account" />
                <import type="androidx.lifecycle.LiveData" />
              <variable
                  name="viewModel"
                  type="info.schedule.viewmodels.PanelManagerViewModel" />
                
                <variable
                    name="accountList"
                    type="LiveData&lt;List&lt;Account&gt;&gt;" />

        </data>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <LinearLayout
                android:id="@+id/ll_addovs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                    <Spinner
                        android:id="@+id/sp_listSearchesTeacher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"/>

                    <Spinner
                        android:id="@+id/sp_listUniversity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:entries="@array/array_university" />


                    <Spinner
                        android:id="@+id/sp_listGroups"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:entries="@array/array_groups" />

                    <Spinner
                        android:id="@+id/sp_listSubjectName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:entries="@array/array_subjectName" />

                    <Spinner
                        android:id="@+id/sp_typeLecture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:entries="@array/array_typeLecture" />

                    <Spinner
                        android:id="@+id/sp_listLectureRoom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:entries="@array/array_lectureRoom" />


                    <Button
                        android:id="@+id/btn_dateLecture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:minWidth="200dp"
                        android:maxWidth="200dp"
                        android:text="@string/btn_date" />


                    <Button
                        android:id="@+id/btn_startTimeLecture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:minWidth="200dp"
                        android:maxWidth="200dp"
                        android:text="@string/btn_startTimeLecture" />


                    <Button
                        android:id="@+id/btn_finishTimeLecture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:minWidth="200dp"
                        android:maxWidth="200dp"
                        android:text="@string/btn_finishTimeLecture" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                            <Button
                                android:id="@+id/btn_clear"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:maxWidth="50dp"
                                android:text="@string/btn_clearData"/>

                            <Button
                                android:id="@+id/btn_assign"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:maxWidth="50dp"
                                android:text="@string/btn_assign" />

                    </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>



</layout>